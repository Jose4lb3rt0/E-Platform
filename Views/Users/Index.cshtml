@model IEnumerable<UserWithRoleViewModel>

<h2>Lista de Usuarios</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo Usuario</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo Electrónico</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Name</td>
                <td>@item.User.Email</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.User.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
